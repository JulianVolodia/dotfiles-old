# gm {{{
# Account {{{
IMAPAccount gm
Host imap.gmail.com
User dapatti@gmail.com
PassCmd "python3 -c 'import keyring; print(keyring.get_password(\"E-Mail\", \"gm\"))'"
UseIMAPS yes
CertificateFile /etc/ssl/certs/ca-certificates.crt
UseTLSv1 no
UseTLSv1.1 no
UseTLSv1.2 yes


IMAPStore gm-remote
Account gm

MaildirStore gm-local
Path ~/.mail/gm/
Inbox ~/.mail/gm/inbox
# }}}

# Group {{{
Channel gm-default
Master :gm-remote:
Slave :gm-local:
Create Slave
Pattern * !"[Google Mail]*"
SyncState *

Channel gm-sent
Master :gm-remote:"[Google Mail]/Gesendet"
Slave :gm-local:sent
Create Slave
SyncState *

Channel gm-drafts
Master :gm-remote:"[Google Mail]/Entw&APw-rfe"
Slave :gm-local:drafts
Create Slave
SyncState *

Channel gm-starred
Master :gm-remote:"[Google Mail]/Markiert"
Slave :gm-local:starred
Create Slave
SyncState *

Channel gm-trash
Master :gm-remote:"[Google Mail]/Papierkorb"
Slave :gm-local:trash
Create Slave
SyncState *

Channel gm-spam
Master :gm-remote:"[Google Mail]/Spam"
Slave :gm-local:spam
Create Slave
SyncState *

Channel gm-archive
Master :gm-remote:"[Google Mail]/Alle Nachrichten"
Slave :gm-local:archive
Create Slave
SyncState *

Group gm gm-default gm-sent gm-drafts gm-starred gm-trash gm-spam gm-archive
# }}}
# }}}

