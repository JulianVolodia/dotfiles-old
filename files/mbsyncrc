# vim: set foldmethod=marker:
Sync Pull

# dr {{{
# Account {{{
IMAPAccount dr
Host imap.strato.de
User patrice.peterson@dronox.de
PassCmd "python3 -c 'import keyring; print(keyring.get_password(\"E-Mail\", \"dr\"))'"
CertificateFile /etc/ssl/certs/ca-certificates.crt
# Doesn't support TLS 1.1 or v1.2

IMAPStore dr-remote
Account dr

MaildirStore dr-local
# The trailing slash is important
Path ~/.mail/dr/
Inbox ~/.mail/dr/inbox
# }}}

# Group {{{
Channel dr-default
Master :dr-remote:
Slave :dr-local:
Pattern * !"Drafts" !"Sent Items" !"Spam" !"Trash"
Create Slave
SyncState *

Channel dr-sent
Master :dr-remote:"Sent Items"
Slave :dr-local:"sent"
Create Slave
SyncState *

Channel dr-drafts
Master :dr-remote:"Drafts"
Slave :dr-local:"drafts"
Create Slave
SyncState *

Channel dr-trash
Master :dr-remote:"Trash"
Slave :dr-local:"trash"
Create Slave
SyncState *

Channel dr-spam
Master :dr-remote:"Spam"
Slave :dr-local:"spam"
Create Slave
SyncState *

group dr dr-default dr-sent dr-drafts dr-trash dr-spam
# }}}
# }}}

