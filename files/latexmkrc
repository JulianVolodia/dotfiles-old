# Latexmk configuration file

# Only run BibTeX/Biber if necessary .bib files exist
$bibtex_use = 1;
# Cleanup also deletes files generated by custom dpendencies
$cleanup_includes_cusdep_generated = 1;
# Generate PDF version of document
$pdf_mode = 1;
# Use LuaLaTeX to create output files
$pdflatex = 'lualatex %O %S';
# Use xdg-open to determine standard pdf previewer
$pdf_previewer = 'xdg-open %O %S';
# Don't create dvi or postscript
$dvi_mode = 0;
$postscript_mode = 0;
# Enable filename recorder to improve source file detection
$recorder = 1;
