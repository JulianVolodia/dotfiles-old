defaults
    port 587
    protocol smtp
    auth on
    tls on
    tls_starttls on
    tls_trust_file /etc/ssl/certs/ca-certificates.crt
    logfile ~/.log/msmtp.log

account al
    host smtp.gmail.com
    user runiq@archlinux.us
    from runiq@archlinux.us

account gm
    host smtp.googlemail.com
    user dapatti@googlemail.com
    from dapatti@googlemail.com

account un
    host smtpauth.uni-halle.de
    user bah6z
    from patrice.peterson@student.uni-halle.de
    tls_certcheck on
    tls_trust_file /home/runiq/uni-halle.pem

account dr
    host smtp.dronox.de
    user patrice.peterson@dronox.de
    from patrice.peterson@dronox.de
