defaults
    port 587
    protocol smtp
    auth on
    tls on
    tls_starttls on
    tls_trust_file /etc/ssl/certs/ca-certificates.crt
    logfile ~/.log/msmtp.log

account al
    host smtp.gmail.com
    user runiq@archlinux.us
    from runiq@archlinux.us
    passwordeval python3 -c "import keyring; print(keyring.get_password('E-Mail', 'al-smtp'))"

