from sys import path
from os.path import expanduser, expandvars
path.append(expanduser(expandvars('$XDG_DATA_HOME/pymol')))

import tmalign
import spectrumany
import make_pov

# Make background white...
bg_color white
# ...and transparent
set opaque_background, off
# Use unilayer transparency by default
set transparency_mode, 2
# Better antialiasing
set antialias, 2
# More "coarse" ray texture
set ray_texture, 4
# Use ambient occlusion for surfaces
set ambient_occlusion_mode, 1
# MOAR OCCLUSION!
set ambient_occlusion_scale, 18.0
# No reflection
set spec_reflect, 0.0
set spec_power, 1500.0
