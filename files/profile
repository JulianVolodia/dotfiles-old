#! /usr/bin/fish
# vim: set foldmethod=marker filetype=sh:

# Environment variables {{{
export PATH="$HOME/.local/bin:$PATH"
export PAGER=less
export EDITOR=vim
# Smart case searching as in Vim
export LESS="-Ri"
# XDG basedir specification
[ -z $XDG_CONFIG_HOME ] && export XDG_CONFIG_HOME="$HOME/.config"
[ -z $XDG_DATA_HOME ] && export XDG_DATA_HOME="$HOME/.local/share"
[ -z $XDG_CACHE_HOME ] && export XDG_CACHE_HOME="$HOME/.cache"
[ -z $XDG_DATA_DIRS ] && export XDG_DATA_DIRS="/usr/local/share:/usr/share:$XDG_DATA_DIRS"
[ -z $XDG_CONFIG_DIRS ] && export XDG_CONFIG_DIRS="/etc/xdg:$XDG_CONFIG_DIRS"

export TEXMFHOME="$XDG_DATA_HOME/texmf"
# }}}
