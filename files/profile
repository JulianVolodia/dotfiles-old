#!/bin/sh

# Lookup path for binaries
export PATH="$HOME/.local/bin:$PATH"
# Pager
export PAGER="less"
# Don't remove color control sequences
export LESS="-R"
# Path to Python documentation
export PYTHONDOCS="/usr/share/doc/python/html"

[[ -r $HOME/.profile-$(hostname) ]] && source $HOME/.profile-$(hostname)
